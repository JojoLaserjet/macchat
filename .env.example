# DO NOT COMMIT REAL SECRETS - This is a template only
# Copy to .env and fill with actual secure values

# Redis
REDIS_PASSWORD=your_strong_random_password_here_min_32_chars
IDENTITY_REDIS_PASSWORD=${REDIS_PASSWORD}
FILE_STORAGE_REDIS_PASSWORD=${REDIS_PASSWORD}
MESSAGING_REDIS_PASSWORD=${REDIS_PASSWORD}

# PostgreSQL Database Passwords (generate with: openssl rand -base64 32)
FILE_STORAGE_POSTGRES_PASSWORD=your_strong_random_password_here_min_32_chars
FILE_STORAGE_POSTGRES_USER=postgres
FILE_STORAGE_DB_NAME=file_metadata

USER_SERVICE_POSTGRES_PASSWORD=your_strong_random_password_here_min_32_chars
USER_SERVICE_POSTGRES_USER=user
USER_SERVICE_DB_NAME=userdb

MESSAGING_POSTGRES_PASSWORD=your_strong_random_password_here_min_32_chars
MESSAGING_POSTGRES_USER=postgres
MESSAGING_DB_NAME=messaging

# MinIO S3 Storage
MINIO_ROOT_USER=chakchat-admin
MINIO_ROOT_PASSWORD=your_strong_random_password_here_min_32_chars
MINIO_ENDPOINT=http://file-storage-minio:9000

# AWS S3 Configuration (if using real AWS instead of MinIO)
FILE_STORAGE_AWS_ACCESS_KEY_ID=your_aws_access_key
FILE_STORAGE_AWS_SECRET_ACCESS_KEY=your_aws_secret_key
FILE_STORAGE_AWS_REGION=us-east-1
FILE_STORAGE_AWS_ENDPOINT_URL=https://s3.amazonaws.com
FILE_STORAGE_S3_BUCKET=chakchat-files
FILE_STORAGE_S3_URL_PREFIX=https://your-domain.com/files/

# SMS Service (SMSAero)
SMSAERO_EMAIL=your-email@example.com
SMSAERO_APIKEY=your_smsaero_api_key

# TLS/SSL Configuration
TLS_CERT_PATH=/app/certs/tls.crt
TLS_KEY_PATH=/app/certs/tls.key

# JWT Secrets (generate with: openssl rand -base64 64)
JWT_ACCESS_TOKEN_SECRET=your_access_token_secret_min_64_chars
JWT_REFRESH_TOKEN_SECRET=your_refresh_token_secret_min_64_chars
JWT_INTERNAL_TOKEN_SECRET=your_internal_token_secret_min_64_chars

# API Security
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Encryption Keys (libsodium - generate with sodium_crypto_secretbox_keygen)
E2E_ENCRYPTION_KEY=your_32_byte_base64_encoded_key

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc

# Environment
ENVIRONMENT=production
LOG_LEVEL=warn
